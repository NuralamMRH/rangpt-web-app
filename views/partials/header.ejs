<div class="flex items-center justify-between p-4 border-b border-slate-800/50 bg-slate-900 z-10">
    <div class="flex items-center gap-2">
        <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
            <div class="h-8 w-8 rounded-md flex items-center justify-center">
                <img src="<%= webConfig.iconUrl %>" alt="<%= webConfig.siteName %>" class="h-8 w-8 object-contain">
            </div>
            <span class="font-semibold text-gray-200">
                <%= webConfig.siteName %>
            </span>
        </a>
    </div>
    <div class="flex items-center gap-2">
        <button onclick="startNewChat()" class="p-2 hover:bg-white/10 rounded-md text-gray-300 transition-colors"
            title="New Chat">
            <i data-lucide="plus" class="h-5 w-5"></i>
        </button>
    </div>
</div>