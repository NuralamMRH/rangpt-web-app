<!DOCTYPE html>
<html lang="en" class="dark">

<%- include('partials/landing-head', { title: webConfig.siteName + ' | Enterprise Grade' , cssPath: '/css/landing.css'
    }) %>

    <body class="overflow-x-hidden">

        <!-- Background -->
        <div class="fixed inset-0 bg-grid-pattern z-[-1] pointer-events-none"></div>
        <div
            class="fixed top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[500px] bg-blue-500/10 blur-[120px] rounded-full pointer-events-none z-[-1]">
        </div>

        <%- include('partials/landing-navbar') %>

            <main class="flex-1">

                <!-- Hero Section -->
                <section class="container relative max-w-screen-2xl mx-auto px-6 pt-32 pb-24 md:pt-48 md:pb-32">
                    <div class="flex flex-col items-center text-center space-y-8">

                        <!-- Badge -->
                        <div
                            class="hero-anim opacity-0 translate-y-4 inline-flex items-center rounded-full border border-border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 bg-secondary text-secondary-foreground hover:bg-secondary/80">
                            <span class="flex h-2 w-2 rounded-full bg-blue-500 mr-2"></span>
                            v2.0 is now live
                        </div>

                        <!-- Title -->
                        <h1
                            class="hero-anim opacity-0 translate-y-4 text-4xl font-extrabold tracking-tight lg:text-6xl max-w-3xl">
                            <%- webConfig.subtitle %>
                        </h1>

                        <!-- Description -->
                        <p class="hero-anim opacity-0 translate-y-4 max-w-[700px] text-lg text-muted-foreground">
                            <%= webConfig.description %>
                        </p>

                        <!-- Buttons -->
                        <div class="hero-anim opacity-0 translate-y-4 flex flex-col sm:flex-row gap-4">
                            <a href="/chat"
                                class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-11 px-8">
                                Try Now
                            </a>
                            <a href="/docs"
                                class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-11 px-8">
                                Read Documentation
                            </a>
                        </div>

                        <!-- Code Preview -->
                        <div class="hero-anim opacity-0 translate-y-8 w-full max-w-4xl mt-16 relative group">
                            <div
                                class="absolute -inset-0.5 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl blur opacity-20 group-hover:opacity-40 transition duration-1000">
                            </div>
                            <div
                                class="relative rounded-xl border border-border bg-card text-card-foreground shadow-sm overflow-hidden">
                                <div class="flex items-center border-b border-border bg-muted/50 px-4 py-2.5">
                                    <div class="flex space-x-1.5">
                                        <div class="h-3 w-3 rounded-full bg-red-500/20 border border-red-500/50"></div>
                                        <div class="h-3 w-3 rounded-full bg-yellow-500/20 border border-yellow-500/50">
                                        </div>
                                        <div class="h-3 w-3 rounded-full bg-green-500/20 border border-green-500/50">
                                        </div>
                                    </div>
                                    <div class="ml-4 text-xs text-muted-foreground font-mono">ran.js</div>
                                </div>
                                <div class="p-6 overflow-x-auto bg-[#09090b]">
                                    <pre><code class="language-javascript">const generateHero = async (product) => {
  const response = await fetch('http://localhost:3000/api/chat', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({
      model: 'gpt-4o',
      systemPrompt: 'You are a conversion rate optimization expert.',
      message: `Write 3 high-converting Hero Sections (Headline, Subhead, CTA) for: ${product}`
    })
  });
  const data = await response.json();
  console.log(data.text);
};

// Usage
generateHero('A smart wallet that tracks your spending');</code></pre>
                                </div>

                            </div>
                        </div>
                    </div>
                </section>

                <!-- Features Grid -->
                <section id="features" class="container max-w-screen-2xl mx-auto px-6 py-24">
                    <div class="mb-12">
                        <h2 class="text-3xl font-bold tracking-tight mb-4">Production Ready</h2>
                        <p class="text-muted-foreground text-lg max-w-2xl">Everything you need to build state-of-the-art
                            AI experiences, right out of the box.</p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <!-- Card 1 -->
                        <div
                            class="feature-card rounded-xl border border-border bg-card text-card-foreground shadow-sm p-6 hover:border-primary/50 transition-colors">
                            <div class="h-10 w-10 rounded-lg bg-primary/10 flex items-center justify-center mb-4">
                                <i data-lucide="zap" class="h-5 w-5 text-primary"></i>
                            </div>
                            <h3 class="text-lg font-semibold mb-2">Real-time Streaming</h3>
                            <p class="text-sm text-muted-foreground">
                                Low-latency WebSocket connections ensure your users never wait for a response.
                            </p>
                        </div>

                        <!-- Card 2 -->
                        <div
                            class="feature-card rounded-xl border border-border bg-card text-card-foreground shadow-sm p-6 hover:border-primary/50 transition-colors">
                            <div class="h-10 w-10 rounded-lg bg-primary/10 flex items-center justify-center mb-4">
                                <i data-lucide="shield" class="h-5 w-5 text-primary"></i>
                            </div>
                            <h3 class="text-lg font-semibold mb-2">Type-Safe SDKs</h3>
                            <p class="text-sm text-muted-foreground">
                                Full TypeScript support with auto-generated types for all API responses.
                            </p>
                        </div>

                        <!-- Card 3 -->
                        <div
                            class="feature-card rounded-xl border border-border bg-card text-card-foreground shadow-sm p-6 hover:border-primary/50 transition-colors">
                            <div class="h-10 w-10 rounded-lg bg-primary/10 flex items-center justify-center mb-4">
                                <i data-lucide="globe" class="h-5 w-5 text-primary"></i>
                            </div>
                            <h3 class="text-lg font-semibold mb-2">Edge Compatible</h3>
                            <p class="text-sm text-muted-foreground">
                                Runs on Vercel Edge, Cloudflare Workers, and Deno Deploy seamlessly.
                            </p>
                        </div>
                    </div>
                </section>

                <!-- Bento Grid Section -->
                <section class="container max-w-screen-2xl mx-auto px-6 py-24 border-t border-border/40">
                    <div class="grid grid-cols-1 md:grid-cols-4 grid-rows-2 gap-6 h-[800px] md:h-[600px]">

                        <!-- Large Item -->
                        <div
                            class="bento-card md:col-span-2 md:row-span-2 rounded-xl border border-border bg-card overflow-hidden relative group">
                            <div class="absolute inset-0 bg-gradient-to-b from-transparent to-black/60 z-10"></div>
                            <img src="https://images.unsplash.com/photo-1618005182384-a83a8bd57fbe?q=80&w=1000&auto=format&fit=crop"
                                class="absolute inset-0 w-full h-full object-cover opacity-40 group-hover:scale-105 transition-transform duration-700"
                                alt="AI Art">
                            <div class="absolute bottom-0 left-0 p-8 z-20">
                                <h3 class="text-2xl font-bold mb-2">Generative Media</h3>
                                <p class="text-muted-foreground">Create stunning images and assets programmatically.</p>
                            </div>
                        </div>

                        <!-- Medium Item -->
                        <div
                            class="bento-card md:col-span-2 rounded-xl border border-border bg-card p-8 flex flex-col justify-center relative overflow-hidden">
                            <div class="absolute top-0 right-0 p-8 opacity-10">
                                <i data-lucide="message-square" class="h-32 w-32"></i>
                            </div>
                            <h3 class="text-xl font-bold mb-2">Context Retention</h3>
                            <p class="text-muted-foreground max-w-xs">
                                Smart context management automatically handles token limits and history.
                            </p>
                        </div>

                        <!-- Small Item 1 -->
                        <div
                            class="bento-card rounded-xl border border-border bg-card p-6 flex flex-col justify-between hover:bg-accent transition-colors">
                            <i data-lucide="github" class="h-8 w-8 mb-4"></i>
                            <div>
                                <h4 class="font-semibold">Open Source</h4>
                                <p class="text-xs text-muted-foreground mt-1">MIT Licensed</p>
                            </div>
                        </div>

                        <!-- Small Item 2 -->
                        <div
                            class="bento-card rounded-xl border border-border bg-card p-6 flex flex-col justify-between hover:bg-accent transition-colors">
                            <i data-lucide="users" class="h-8 w-8 mb-4"></i>
                            <div>
                                <h4 class="font-semibold">Community</h4>
                                <p class="text-xs text-muted-foreground mt-1">Join Discord</p>
                            </div>
                        </div>

                    </div>
                </section>

                <!-- CTA -->
                <section class="container max-w-screen-2xl mx-auto px-6 py-24">
                    <div
                        class="rounded-3xl border border-border bg-gradient-to-b from-muted/50 to-background p-12 text-center">
                        <h2 class="text-3xl font-bold tracking-tight mb-4">Ready to ship?</h2>
                        <p class="text-muted-foreground mb-8">Join thousands of developers building with our API today.
                        </p>
                        <a href="/docs"
                            class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-11 px-8">
                            Get Started for Free
                        </a>
                    </div>
                </section>

            </main>

            <%- include('partials/landing-footer') %>

                <!-- Libraries -->
                <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
                <script src="https://cdn.jsdelivr.net/gh/studio-freight/lenis@1.0.29/bundled/lenis.min.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
                <script>hljs.highlightAll();</script>

                <!-- Custom Scripts -->
                <script src="/js/landing.js"></script>
    </body>

</html>